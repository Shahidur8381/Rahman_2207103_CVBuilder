<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.example._207103_project.ExploreController" 
            prefWidth="700.0" prefHeight="600.0"
            style="-fx-background-color: #f3f4f6;">

   <top>
      <VBox spacing="10" BorderPane.alignment="CENTER">
         <children>
            <Label text="Explore Saved CVs" textAlignment="CENTER" textFill="#0b4f6c">
               <font>
                  <Font name="System Bold" size="28.0" />
               </font>
            </Label>
            <Label text="View and manage your saved curriculum vitae" textAlignment="CENTER" textFill="#64748b">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets top="20" right="20" bottom="10" left="20" />
         </padding>
      </VBox>
   </top>

   <center>
      <ScrollPane fitToWidth="true" style="-fx-background:transparent; -fx-background-color:transparent;" BorderPane.alignment="CENTER">
         <content>
            <VBox fx:id="cvListContainer" spacing="12" style="-fx-padding:20;">
               <!-- CV cards will be added here dynamically -->
            </VBox>
         </content>
      </ScrollPane>
   </center>

   <bottom>
      <HBox alignment="CENTER" spacing="12" BorderPane.alignment="CENTER">
         <children>
            <Button text="Back to Home" onAction="#backToWelcome" 
                    style="-fx-background-color:#64748b; -fx-text-fill:white; -fx-font-weight:bold; -fx-background-radius:6; -fx-padding:10 20 10 20;">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets top="12" right="12" bottom="16" left="12" />
         </padding>
      </HBox>
   </bottom>

</BorderPane>
