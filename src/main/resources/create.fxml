<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example._207103_project.CreateController">

    <!-- Header -->
    <top>
        <Label text="Create CV" style="-fx-font-size:18px; -fx-font-weight:bold;" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="12" right="12" bottom="6" left="12"/>
            </padding>
        </Label>
    </top>

    <!-- Center: scrollable form area -->
    <center>
        <ScrollPane fitToWidth="true">
            <VBox spacing="10">
                <!-- overall padding for the VBox -->
                <padding>
                    <Insets top="12" right="12" bottom="12" left="12"/>
                </padding>

                <!-- Main grid for basic fields -->
                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints minWidth="140"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>

                    <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="fullNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Phone:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="phoneField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Address:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextArea fx:id="addressArea" prefRowCount="2" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                </GridPane>

                <!-- Sections (each section has a label + textarea for now) -->
                <VBox spacing="6">
                    <Label text="Educational Qualifications (one per line)" />
                    <TextArea fx:id="eduArea" prefRowCount="3"/>
                </VBox>

                <VBox spacing="6">
                    <Label text="Skills (comma or newline separated)" />
                    <TextArea fx:id="skillsArea" prefRowCount="2"/>
                </VBox>

                <VBox spacing="6">
                    <Label text="Work Experience (one per line)" />
                    <TextArea fx:id="expArea" prefRowCount="3"/>
                </VBox>

                <VBox spacing="6">
                    <Label text="Projects (one per line)" />
                    <TextArea fx:id="projArea" prefRowCount="3"/>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

    <!-- Bottom: action buttons -->
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="8" right="12" bottom="12" left="12"/>
            </padding>
            <Button fx:id="backButton" text="Back" onAction="#backToWelcome"/>
            <Button fx:id="generateButton" text="Generate CV" onAction="#onGenerate"/>
        </HBox>
    </bottom>

</BorderPane>
