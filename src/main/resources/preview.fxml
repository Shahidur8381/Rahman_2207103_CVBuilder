<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example._207103_project.PreviewController"
            prefWidth="700.0" prefHeight="900.0"
            style="-fx-background-color: #f3f4f6;">
    <top>
        <Label text="Curriculum Vitae" textAlignment="CENTER" textFill="#0b4f6c" underline="false" BorderPane.alignment="CENTER">
            <font><Font name="System Bold Italic" size="26.0"/></font>
            <padding><Insets top="16" right="16" bottom="8" left="16"/></padding>
        </Label>
    </top>
    <padding><Insets top="12" right="12" bottom="12" left="12"/></padding>
    <center>
        <ScrollPane prefWidth="680" prefHeight="780" BorderPane.alignment="CENTER" fitToWidth="true" style="-fx-background:transparent; -fx-background-color:transparent;">
            <content>
                <VBox prefWidth="660" spacing="14" alignment="TOP_CENTER">
                    <children>
                        <VBox spacing="12" style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 10,0,0,4); -fx-padding:18;">
                            <children>
                                <HBox spacing="14" alignment="CENTER_LEFT">
                                    <ImageView fx:id="previewPhoto" fitWidth="120" fitHeight="120" preserveRatio="true" style="-fx-background-color: #e6eef3; -fx-background-radius:6; -fx-padding:4;"/>
                                    <VBox spacing="6">
                                        <Label fx:id="nameLabel" style="-fx-font-size:22px; -fx-font-weight:bold; -fx-text-fill:#0b3a4a;"/>
                                        <Label fx:id="contactLabel" style="-fx-font-size:13px; -fx-text-fill:#475569;"/>
                                    </VBox>
                                    <Region HBox.hgrow="ALWAYS"/>
                                </HBox>
                                <Separator style="-fx-background-color: transparent; -fx-border-color: #e6eef3; -fx-border-width: 1 0 0 0;"/>
                                <VBox spacing="10" style="-fx-padding:8 0 0 0;">
                                    <Label text="Education" style="-fx-font-size:16px; -fx-font-weight:bold; -fx-text-fill:#0b4f6c;"/>
                                    <VBox fx:id="educationBox" spacing="6" style="-fx-padding:6 10 6 10;"/>
                                </VBox>
                                <VBox spacing="10" style="-fx-padding:6 0 0 0;">
                                    <Label text="Skills" style="-fx-font-size:16px; -fx-font-weight:bold; -fx-text-fill:#0b4f6c;"/>
                                    <FlowPane fx:id="skillsBox" hgap="8" vgap="8" style="-fx-padding:6 10 6 10;"/>
                                </VBox>
                                <VBox spacing="10" style="-fx-padding:6 0 0 0;">
                                    <Label text="Work Experience" style="-fx-font-size:16px; -fx-font-weight:bold; -fx-text-fill:#0b4f6c;"/>
                                    <VBox fx:id="experienceBox" spacing="6" style="-fx-padding:6 10 6 10;"/>
                                </VBox>
                                <VBox spacing="10" style="-fx-padding:6 0 0 0;">
                                    <Label text="Projects" style="-fx-font-size:16px; -fx-font-weight:bold; -fx-text-fill:#0b4f6c;"/>
                                    <VBox fx:id="projectsBox" spacing="6" style="-fx-padding:6 10 6 10;"/>
                                </VBox>
                            </children>
                        </VBox>
                    </children>
                    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                </VBox>
            </content>
        </ScrollPane>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="12" BorderPane.alignment="CENTER">
            <children>
                <Button text="Back" onAction="#backToCreate" style="-fx-background-color:#ef4444; -fx-text-fill: white; -fx-font-weight:bold; -fx-background-radius:6; -fx-padding:8 12 8 12;"/>
                <Button text="Save to Database" onAction="#saveCV" style="-fx-background-color:#10b981; -fx-text-fill: white; -fx-font-weight:bold; -fx-background-radius:6; -fx-padding:8 12 8 12;"/>
            </children>
            <padding><Insets top="8" right="12" bottom="12" left="12"/></padding>
        </HBox>
    </bottom>
</BorderPane>

